
@{
    ViewBag.Title = "PasswordReset";
}
@model string

<div class="main-wrapper">
    <div class="account-page">
        <div class="container">
            <h3 class="account-title text-white">Password Change</h3>
            <div class="account-box">
                <div class="account-wrapper">
                    <div class="account-logo">
                        <a href="Index.cshtml" class="logo">
                            <img src="~/assets/img/logo.png" width="40" height="60" alt="">
                        </a>
                    </div>

                    @using (Html.BeginForm("ChangePassword", "user", FormMethod.Post))
                    {
                       
                        
                        @*<div class="form-group custom-mt-form-group">
                <label for="CurrentPassword">user Id :</label>
                @Html.Password("userId", null, new { @class = "form-control" })
            </div>*@
                        <div class="form-group custom-mt-form-group">
                            <label for="CurrentPassword">Current Password:</label>
                            @Html.Password("OldPassword", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group custom-mt-form-group">
                            <label for="NewPassword">New Password:</label>
                            @Html.Password("NewPassword", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group custom-mt-form-group">
                            <label for="ConfirmPassword">Confirm Password:</label>
                            @Html.Password("ConfirmPassword", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group text-center custom-mt-form-group">
                            <button class="btn btn-primary btn-block account-btn" type="submit">Change Password</button>
                        </div>
                    }
                    @*<div class="text-center">
            <a href="forgot-password.html">Forgot your password?</a>
        </div>*@

                </div>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(Model))
{
    <div class="alert alert-danger">@Model</div>
}
